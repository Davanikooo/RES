modules = ["cpp-clang14", "c-clang14", "python-3.12", "cpp-clang"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cmake"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Resize Tool"

[[workflows.workflow]]
name = "Resize Tool"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """
cd build && echo \"=== Resize - File Compression Tool ===\" && echo \"Showing version information:\" && ./resize --version && echo -e \"
=== Showing help information: ===\" && ./resize --help && echo -e \"
=== Ready to use! ===\""""

[workflows.workflow.metadata]
outputType = "console"
