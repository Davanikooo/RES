modules = ["cpp-clang14", "c-clang14", "python-3.12", "cpp-clang"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cmake"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Resize Tool"

[[workflows.workflow]]
name = "Resize Tool"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """
cd build && echo \"=== Resize - File Compression Tool ===\" && echo \"Showing version information:\" && ./resize --version && echo -e \"
=== Showing help information: ===\" && ./resize --help && echo -e \"
=== Ready to use! ===\""""

[workflows.workflow.metadata]
outputType = "console"

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "cd build && echo 'Resize - File Compression Tool is ready!' && echo 'Use: ./resize [options] file...' && echo 'Example: ./resize --help' && echo 'Example: ./resize --version' && sleep infinity"]
build = ["bash", "-c", "mkdir -p build && cd build && cmake .. -DCMAKE_BUILD_TYPE=Release -DRES_CONFIG_DISABLE_WERROR=ON && make -j$(nproc)"]
